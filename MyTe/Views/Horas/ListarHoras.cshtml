<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
    <center>
        <h1 class="mb-4">Lançamento de Horas </h1>
    </center>
</head>
<body>
    <div class="container center-content">
        <form asp-action="AdicionarHora">
            <div class="quinzena">
                <table class="tabelas tabela-com-imagem">
                    <thead>
                        <tr>
                            <th style="width: auto;"></th> 
                            @for (int i = 1; i <= 15; i++)
                            {
                                <th class="dias" style="width: 100px;">@DateTime.Now.AddDays(i - 1).ToString("ddd")<br />@i</th>
                            }
                            <th class="dias" style="width: 120px;">Total Horas</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int row = 0; row < 6; row++)
                        {
                            <tr>
                                <td>
                                    <div class="col col-lg">
                                        <select class="form-select" style="width: auto;">
                                            <option value="0">WBS</option>
                                            @foreach (var wbs in (SelectList)ViewBag.ListaDeWBS)
                                            {
                                                <option value="@wbs.Value">@wbs.Text</option>
                                            }
                                        </select>
                                    </div>
                                </td>
                                @for (int col = 1; col <= 15; col++)
                                {
                                    <td class="col col-lg" style="width: 100px;">
  
                                        <input type="text" class="form-control" />
                                    </td>
                                }
                                <td class="col col-lg" style="width: 120px;">

                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="16" style="text-align: left; font-weight: bold;">Total por dia</td> <
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-end mt-3">
                <button type="submit" class="btn btn-primary">Incluir horas</button>
            </div>
        </form>
    </div>
</body>
</html>
