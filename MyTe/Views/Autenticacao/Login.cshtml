@model MyTe.Models.Entities.LogonViewModel

@{
    ViewData["Title"] = "Login";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="cor">

<div class ="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg p-3 mb-5 bg-white text-black">
                <div class="card-body p-5 text-center">
                    <div class="mb-md-5 mt-md-2">

                        <h1 class="fw-bold mb-4 text-uppercase">Login</h1>
                        <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control form-control-lg"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <label asp-for="Senha" class="form-label"></label>
                                <input asp-for="Senha" class="form-control form-control-lg" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>

@*                             <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                </label>
                            </div>
 *@
                            <div class="form-group">
                                <input type="submit" value="Efetuar Login" class="btn btn-success" />
                            </div>
                        </form>
                        <div class="mt-md-4">
                            <p class="mb-0">Não tem uma conta? <a asp-controller="Autenticacao" asp-action="Registrar" class="text-black-50 fw-bold">Cadastre-se</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>
 </body>
