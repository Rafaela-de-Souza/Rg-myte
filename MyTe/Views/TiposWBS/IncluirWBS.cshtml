@model WBS

@{
    ViewData["Title"] = "IncluirWBS";
}

<h1 class="text-center">Nova WBS</h1>

<div class="row center-div">
    <div class="col-md-4 card">
        <form asp-action="IncluirWBS">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CodigoWBS" class="control-label"></label>
                <input asp-for="CodigoWBS" class="form-control" />
                <span asp-validation-for="CodigoWBS" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tipo" class="control-label"></label>

                <select asp-for="Tipo" class="form-select">
                    <option value="0">SELECIONE O TIPO</option>
                    <option value="1">1 - ALOCADO</option>
                    <option value="2">2 - NÃO ALOCADO</option>
                </select>

                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Incluir WBS" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="ListarWBSs">Voltar para a lista de WBS</a>
</div>
